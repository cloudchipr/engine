{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns": [
        "policy.json"
    ],
    "rules": {
        "no-useless-constructor": "off",
        "no-unused-vars": "off",
        "@typescript-eslint/no-useless-constructor": ["error"],
        "@typescript-eslint/no-unused-vars": ["error"]
    }
}
